{
    my $base = $proxycti{'LdapBaseDN'} || esmith::util::ldapBase($DomainName);
    my $ou = $proxycti{'LdapOu'} || "Users";
    my $port = $proxycti{'LdapPort'} || "389";
    my $server = $proxycti{'LdapServer'} || 'localhost';

    $OUT = '{
    "type":   "ldap",
    "ldap": {
        "ou":     "' . $ou . '",
        "baseDn": "' . $base .'",
        "port":   "' . $port .'",
        "server": "' . $server .'"
    },
    "file": {
        "path": "/etc/nethcti/users.json"
    },
    "expiration_timeout": "3600"
}';
}
