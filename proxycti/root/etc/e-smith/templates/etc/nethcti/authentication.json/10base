{
    our $base = $proxycti{'LdapBaseDN'} || esmith::util::ldapBase($DomainName);
    our $ou = $proxycti{'LdapOu'} || "Users";
    our $port = $proxycti{'LdapPort'} || "389";
    our $server = $proxycti{'LdapServer'} || 'localhost';
}
\{
    "type":   "ldap",
    "ldap": \{
        "ou":     "{$ou}",
        "baseDn": "{$base}",
        "port":   "{$port}",
        "server": "{$server}"
    \},
    "file": \{
        "path": "/etc/nethcti/users.json"
    \},
    "expiration_timeout": "3600"
\}
