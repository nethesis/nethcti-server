{
    my $proto = ${'nethcti-server'}{Protocol} || "http";
    my $ports_str = ${'nethcti-server'}{TCPPorts} || "8180,8181,8182,8183";
    my @ports = split(',', $ports_str);
    my $port = $ports[0];
    if ($proto eq "https") {
        $OUT.="SSLProxyEngine On\n";
    }
    $OUT.="ProxyPass /webrest $proto://127.0.0.1:$port\n";
    $OUT.="ProxyPassReverse /webrest $proto://127.0.0.1:$port\n";
}
