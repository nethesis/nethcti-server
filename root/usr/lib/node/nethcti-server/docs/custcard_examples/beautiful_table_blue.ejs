<style type="text/css">
.block {
    
    overflow: auto;
    -webkit-transition: height 300ms linear;
    -moz-transition: height 300ms linear;
    -o-transition: height 300ms linear;
    transition: height 300ms linear;
}

.blockBlue {
    border: 2px solid #1f3f7a;
}

#imgBlue {
    margin-left: -15px;
}

.tableName {
    cursor: pointer;
    position: absolute;
    right: 0;
    top:0;
    width: 100%;
    height: 100%;
    padding-top: 11px;
    text-align: center;
}

.tableRuleBlue {
    width: 100%;
   border-collapse: collapse;
   padding: 0px !important;
   height: auto !important;
}

.tableElementBlue {
   font-size: 14px;
   text-align: left;
}

.customThBlue {
   word-break: normal;
   min-width: 70px;
   text-align: center;
   padding: 13px 11px;
   font-weight:700;
   background-color: #a4b1c9;
   color:black;
   border: 1px solid #a39f9f;
}

.customTdBlue {
   word-break: normal;
   min-width: 70px;
   text-align: center;
   padding: 11px 20px 11px 20px;
   border: 1px solid #a39f9f;
}

tr:nth-child(even){
   background-color: #f2f2f2;
}

tr:nth-child(odd){
   background-color: white;
}

.nameCardBlue{
   margin-top:10px;
   width:10%;
   color: black;
   background-color: #a4b1c9;
   border-top:2px solid #1f317a;
   border-left:2px solid #1f317a;
   border-right:2px solid #1f317a;
   min-width:137px;
   min-height: 20px;
   font-weight:700;
   position: relative;
   padding:11px;
   padding-left:30px !important;
}

.nameCardBlue:hover{
   margin-top: 10px;
   width:10%;
   color: white;
   background-color: #1f317a;
   border-top:2px solid #1f317a;
   border-left:2px solid #1f317a;
   border-right:2px solid #1f317a;
   min-width:137px;
   min-height: 20px;
   font-weight:700;
   position: relative;
   padding:11px;
   padding-left:30px !important;
}

.breakText {
   display: inline-block;
   word-break: break-all;
   overflow: hidden;
   text-overflow: ellipsis;
   white-space: nowrap;
}
</style>

<% if(results.length==0){ %>
        <table width="50%" cellpadding="5" ><tr><td><h3></h3></td></tr> <tr><td>Spiacente, nessun dato presente.</td></tr></table>
<% } else { %>
   
                <div class="nameCardBlue nameCard">
		      <img id = "imgBlue" src="images/sort-down.png" height="10" width="10"/>
                      <label for="showBlockBlue" class="tableName breakText"><%= name %>: <%= results.length %></label>
		</div>
		<div class="block blockBlue">
		    <table class="tableRuleBlue">
		    <tr>
		    <% for (prop in results[0]) {
       			if (prop === "server_address") continue;
		    %>
   		    <th class="tableElementBlue customThBlue"> <%= prop %> </th>
	<%  }%>
</tr>

<% for(var i=0; i<results.length; i++){ %>
  <tr>
     <% for (prop in results[i]) {
            if (prop === "server_address") continue;
	
      %>
              <td class="customTdBlue"><%= results[i][prop] %> </td>
     <%  } %>
  </tr>
                        <% } %>
                </table>
		</div>


<% } %>
