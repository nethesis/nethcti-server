/var/log/asterisk/nethcti.log {
   missingok
   rotate 10
   compress
   weekly
   create 0644 asterisk asterisk
   postrotate
       /usr/bin/systemctl restart nethcti-server &> /dev/null
   endscript
}

/var/log/forever_nethcti.js.log {
   missingok
   rotate 10
   compress
   weekly
   create 0644 asterisk asterisk
   copytruncate
}
