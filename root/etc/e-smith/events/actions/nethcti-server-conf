#!/bin/bash
/usr/bin/mysql --defaults-file=/root/.my.cnf < /usr/lib/node/nethcti-server/sql/db_tables/nethcti3.sql
PASS=$(perl -e 'use NethServer::Password; my $ctidb_pwd = NethServer::Password::store("CTIDBPasswd"); print ($ctidb_pwd);')
/usr/bin/mysql --defaults-file=/root/.my.cnf -e "GRANT ALL ON nethcti3.* TO nethcti@localhost  IDENTIFIED BY '$PASS';FLUSH PRIVILEGES;"
/usr/bin/mysql --defaults-file=/root/.my.cnf -e "GRANT ALL ON phonebook.* TO nethcti@localhost  IDENTIFIED BY '$PASS';FLUSH PRIVILEGES;"

# Insert default sources and customer card
/usr/bin/mysql -unethcti -p$PASS -e "INSERT IGNORE INTO nethcti3.user_dbconn VALUES (1, 'localhost', '/var/lib/mysql/mysql.sock', 'mysql', 'nethcti', '$PASS', 'phonebook', NOW());"

CDRDBUSER=$(/usr/bin/php -r "include_once('/etc/freepbx.conf');global \$amp_conf;echo (\$amp_conf['CDRDBUSER']?\$amp_conf['CDRDBUSER']:\$amp_conf['AMPDBUSER']);")
CDRDBPASS=$(/usr/bin/php -r "include_once('/etc/freepbx.conf');global \$amp_conf;echo (\$amp_conf['CDRDBPASS']?\$amp_conf['CDRDBPASS']:\$amp_conf['AMPDBPASS']);")
CDRDBNAME=$(/usr/bin/php -r "include_once('/etc/freepbx.conf');global \$amp_conf;echo \$amp_conf['CDRDBNAME'];")
/usr/bin/mysql -unethcti -p$PASS -e "INSERT IGNORE INTO nethcti3.user_dbconn VALUES (2, 'localhost', '/var/lib/mysql/mysql.sock', 'mysql', '$CDRDBUSER', '$CDRDBPASS', '$CDRDBNAME', NOW());"

/usr/bin/mysql -unethcti -p$PASS -e "INSERT IGNORE INTO nethcti3.customer_card VALUES (1, 'Identity', NOW(), \"select * from phonebook where homephone like '%\$NUMBER' or workphone like '%\$NUMBER' or cellphone like '%\$NUMBER' or fax like '%\$NUMBER'\", 'identity', 1, NULL);"
/usr/bin/mysql -unethcti -p$PASS -e "INSERT IGNORE INTO nethcti3.customer_card VALUES (2, 'Last calls', NOW(), \"select DATE_FORMAT(calldate,'%d/%m/%Y') as date, DATE_FORMAT(calldate,'%H:%i:%S') as time, clid, src, dst, uniqueid,duration, time_format(billsec, '%H:%i:%S') as billsec, disposition,if(src='\$NUMBER','in','out') as direction from cdr where (src = '\$NUMBER' or dst = '\$NUMBER') and disposition = 'ANSWERED' order by calldate desc limit 0,10\", 'lastcalls', 2, NULL);"
