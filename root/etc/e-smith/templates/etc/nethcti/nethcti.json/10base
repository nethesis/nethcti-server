{
  my $hostname = "${SystemName}.${DomainName}" || die('Can not get the hostname !');
  my $loglevel = ${'nethcti-server'}{'LogLevel'} || "warn";

  $OUT  = '{
  "logfile": "/var/log/asterisk/nethcti.log",
  "hostname": "' . $hostname . '",
  "loglevel": "' . $loglevel . '",
  "privacy_numbers": "xxx"
}';
}
