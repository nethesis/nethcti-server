{
    my $restPort = ${'nethcti-server'}{RestPort} || "8179";
    my $wssPort = ${'nethcti-server'}{WssPort} || "8181";

    $OUT.="ProxyPass /webrest http://127.0.0.1:$restPort\n";
    $OUT.="ProxyPassReverse /webrest http://127.0.0.1:$restPort\n";

    $OUT.= "SSLProxyEngine On\n";
    $OUT.= "SSLProxyCheckPeerCN off\n";
    $OUT.= "SSLProxyCheckPeerName off\n";

    $OUT.= "ProxyPass        /socket.io wss://127.0.0.1:$wssPort/socket.io\n";
    $OUT.= "ProxyPassReverse /socket.io wss://127.0.0.1:$wssPort/socket.io\n";
}
